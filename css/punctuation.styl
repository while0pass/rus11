$beige = #9a8b62
$beigePastel = #e3dcc0
$blue = #153450
$bluePastel = #8fbcdb
$green = #5e7703
$greenPastel = #c1cc89
$red = rgb(176, 102, 96)
$redPastel = #eac3b8
$yellow = #ca8f42
$yellowPastel = #f9d3a5

$padX = 2em
$padding = (0.7 * $padX) $padX

#rXI---main
    color: #333
    font-family: Arial, 'Lucida Grande', sans-serif
    font-size: 12pt
    margin: auto
    max-width: 40em
    counter-reset: sentence

    .rXI---note
        padding: 28px 20px 15px 210px
        background: $beigePastel url(http://iclass.home-edu.ru/file.php/918/Icons/for_test.png) no-repeat 15px 20px
        color: $blue
        border-radius: 10px
        margin-bottom: 2em
        min-height: 140px
        box-sizing: border-box

        p
            margin: 0 0 10px 0

    &.answers .rXI---markers
        a
            padding-left: $padX
            margin: 10px auto
        span
            display: none

.rXI---author
    display: inline
    text-align: right
    padding: 0
    font-style: italic
    white-space: nowrap
    color: $green
    opacity: 0.7

    &:before
    &::before
        content: '('

    &:after
    &::after
        content: ')'

.rXI---textarea
    display: inline
    position: relative
    outline: none
    border: none
    margin: 0

.rXI---allSentences
    background-color: $greenPastel
    color: $green
    border: none
    border-radius: 5px
    padding: $padding (0.5 * $padX)

.rXI---sentence
    outline: none
    position: relative
    margin-bottom: 12px
    line-height: 1.5em
    margin-left: 1.5em

    &:before
    &::before
        color: $green
        opacity: 0.7
        counter-increment: sentence
        content: counter(sentence) "."
        position: absolute
        left: -1.8em

    &::selection
    & *::selection
        background-color: inherit
        color: inherit

    .rXI---textarea span
        position: relative

        canvas.good.puCorrectness
        canvas.bad.puCorrectness
            width: 100%
            height: 5px
            position: absolute
            bottom: -5px
            left: -4px
        canvas.good.seCorrectness
        canvas.bad.seCorrectness
            position: absolute
            top: -8px
            left: 0

.rXI---score
.rXI---slug
    display: none
